@model Coinrr.Models.Post.NewPostModel

<h1>New Post | @Model.CoinName</h1>

<form asp-action="AddPost" method="post" id="addPostForm">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-contorl" />
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control">
            
        </textarea>
    </div>
    <button type="submit" id="submitPostBtn" class="btn btn-submitPost">
        Submit Post
    </button>
    <input asp-for="CoinId" type="hidden" />

</form>