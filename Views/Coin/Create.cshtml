@model Coinrr.Models.Coin.AddCoinModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Create New Coin
        </div>
    </div>
    <div class="row">
        <div id="createForumSection">
            <form asp-action="AddCoin" method="post" id="createForumForm" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title">Coin Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Choose coin title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Coin Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Write a brief description for the coin" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div id="upload">
                    <label>Upload Coin Image</label>
                    <br />
                    <label class="btn btn-default btn-file">
                        Browse <input asp-for="ImageUpload" typeof="file" style="display: none">
                    </label>
                </div>
                <button type="submit" id="newFormBtn" class="btn btn-submitPost">Create Coin</button>
            </form>
        </div>
    </div>
</div>