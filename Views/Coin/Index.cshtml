@model Coinrr.Models.Coin.CoinIndexModel

<h1>Coins</h1>

<table class="table table-hover" id="coinIndexTable">
    <tbody>
        @foreach(var coin in Model.CoinList)
        {
            <tr>
                <td>
                    <a asp-controller="Coin" asp-action="Topic" asp-route-id="@coin.Id">
                        @coin.Name
                    </a>
                </td>
                <td>
                    @coin.Description
                </td>
            </tr>
        }
    </tbody>
</table>
